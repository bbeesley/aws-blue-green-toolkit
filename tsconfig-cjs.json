{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS", // tells tsc not to transform es imports/exports to requires and module.exports.
    "target": "ES2021", // feature set of the runtime environment - node 16 supports all of ES2021
    "moduleResolution": "Node", // this just tells ts that we're using node16 and it's glorious but weird module resolution
    "outDir": "dist/cjs", // directory we're compiling out to
    "declaration": false, // emit .d.ts files when compiling
    "declarationMap": false, // emit maps for the declaration files so your editor works properly with them
  }
}
